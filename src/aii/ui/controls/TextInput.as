package aii.ui.controls {	import aii.ui.core.InvalidationType;	import aii.ui.controls.bases.TextBase;
	/**	 * TextInput类提供了单行输入组件，单行输入组件常用来收集一些简单的文字信息（如用户名、密码）。	 * @author Swfdong	 */	public class TextInput extends TextBase {		protected var _maxChars:int = 0;
		//构造		/**		 * @param args		 */		public function TextInput(args:Object=null):void {			_width = 80;			_height = 26;			super(args);		}		override protected function draw():void {			if (invalidType & InvalidationType.PROPERTY) {				textField.displayAsPassword = _password;				textField.maxChars = _maxChars;			}			super.draw();		}		/**		 * 指定输入文本的最大字符数。		 * @param value 文本的最大字符数。		 */		public function set maxChars(value:int):void {			if (_maxChars != value) {				_maxChars = value;				invalidate(InvalidationType.PROPERTY);			}		}		/**		 * 获取输入文本的最大字符数。		 * @return 文本的最大字符数。		 */		public function get maxChars():int {			return _maxChars;		}	}}