	public class StringValidator {		private static const REGEXP_MAIL:RegExp = /\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+(w+([.-]\w+))*/;		//第一位不能是0		private static const REGEXP_ID:RegExp = /^[1-9]*[1-9][0-9]*$/;
		public static function isMail(str:String):Boolean {			return REGEXP_MAIL.test(str);		}
		public static function isNumID(str:String):Boolean {			if (REGEXP_ID.test(str) && str.length == 11) {				return true;			}			return false;		}	}}