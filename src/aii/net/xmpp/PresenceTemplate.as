package aii.net.xmpp {
	public class PresenceTemplate {		public static function LOGIN_SHOW(... args):XML {			if (args[0] == "" || args[0] == null) {				return XML("<presence><priority>1</priority><c xmlns='http://jabber.org/protocol/caps' node='http://swfdong.org/' ver='" + args[1] + "'/><show/><x xmlns='vcard-temp:x:update'/></presence>");			} else {				return XML("<presence><priority>1</priority><c xmlns='http://jabber.org/protocol/caps' node='http://swfdong.org/' ver='" + args[1] + "'/><show>" + args[0] + "</show><x xmlns='vcard-temp:x:update'/></presence>");			}		}
		public static function SHOW(... args):XML {			return <session xmlns='urn:ietf:params:xml:ns:xmpp-session'/>;		}
		public static function UPDATE_STATUS(... args):XML {			return XML("<presence><status>" + args[0] + "</status><c xmlns='http://jabber.org/protocol/caps' node='http://swfdong.org/' ver='" + args[1] + "'/><x xmlns='vcard-temp:x:update'><photo/></x></presence>");		}	}}